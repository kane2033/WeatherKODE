<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="bottom_sheet_item" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:background">@drawable/abc_btn_borderless_material</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">30dp</item>
        <item name="android:drawablePadding">34dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="failure_title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="failure_text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="retry_button" parent="button">
        <item name="strokeColor">?attr/colorSecondary</item>
    </style>

    <style name="weather_button" parent="button">
        <item name="strokeColor">?attr/colorOnPrimary</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>