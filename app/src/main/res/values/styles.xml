<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="oval_image">
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomLeft">15%</item>
    </style>

    <style name="weather_title_text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/weather_text_size</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="weather_text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/weather_text_size</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="failure_title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="failure_text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="retry_button" parent="button">
        <item name="strokeColor">?attr/colorSecondary</item>
    </style>

    <style name="weather_button" parent="button">
        <item name="strokeColor">?attr/colorOnPrimary</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>